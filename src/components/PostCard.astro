---
interface Props {
  title: string;
  slug: string;
  date: string;
  excerpt?: string;
}

const { title, slug, date, excerpt } = Astro.props;
---

<article class="post-card">
  <h2 class="post-title">
    <a class="post-link" href={`/posts/${slug}`}>
      {title}
    </a>
  </h2>
  <div class="post-meta">
    {excerpt && <div class="post-excerpt">{excerpt}</div>}
    <div class="post-footer">
      <a class="read-more" href={`/posts/${slug}`}>阅读全文……</a>
      <span class="post-date">{date}</span>
    </div>
  </div>
</article>

<style>
  .post-card {
    padding: 1.5rem 0;
    border-bottom: 1px solid rgba(15, 23, 42, 0.08);
  }

  .post-card:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .post-title {
    font-size: 1.35rem;
    font-weight: 800;
    margin-bottom: 0.35rem;
    line-height: 1.3;
  }

  .post-link {
    color: #0b0b0d;
    text-decoration: none;
    font-family: "Space Grotesk", "Inter", system-ui, sans-serif;
    letter-spacing: 0.01em;
    transition: color 0.2s ease;
  }

  .post-link:hover {
    color: #0b172a;
    text-decoration: none;
  }

  .post-meta {
    color: rgba(55, 65, 81, 0.75);
    font-size: 0.95rem;
  }

  .post-excerpt {
    margin-top: 0.55rem;
    line-height: 1.8;
    color: rgba(15, 23, 42, 0.75);
  }

  .post-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 0.75rem;
  }

  .read-more {
    color: rgba(59, 130, 246, 0.9);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s ease;
  }

  .read-more:hover {
    color: rgba(37, 99, 235, 1);
    text-decoration: underline;
  }
</style>
